{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build multi-arch image",
      "type": "shell",
      "command": "docker buildx build",
      "args": [
        "--platform",
        "linux/amd64,linux/arm64",
        "-t",
        "unbound:1.22.0-alpine3.15-{{.Platform}}",
        "-t",
        "unbound:latest-{{.Platform}}",
        "--push",
        "."
      ],
      "problemMatcher": []
    }
  ]
}
